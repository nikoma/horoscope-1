<h1 align="center">Sign In</h1>

<%= form_for :user do |f| %>
  <p align="center">
    <%= f.label :Email %><br>
    <%= f.email_field :email %>
  </p>
 
  <p align="center">
    <%= f.label :Password %><br>
    <%= f.password_field :pass %>
  </p>
 
  <p align="center">
    <%= f.submit %>
  </p>
<% end %>