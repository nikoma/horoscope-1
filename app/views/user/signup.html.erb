<h1 align="center">Sign Up</h1>

<%= form_for :user do |f| %>
  <p align="center">
    <%= f.label :Email %><br>
    <%= f.email_field :email %>
  </p>
 
  <p align="center">
    <%= f.label :Password %><br>
    <%= f.password_field :password %>
  </p>
  
  <p align="center">
    <%= f.label :Confirm_password %><br>
    <%= f.password_field :password_confirmation %>
  </p>
  
  <p align="center">
    <%= f.label :Date_of_Birth %><br>
    <%= f.date_field :dt_of_b %>
  </p>
 
  <p align="center">
    <%= f.submit %>
  </p>
<% end %>