<% provide(:title, 'Sign Up') %>
<div class="center  hero-unit">
  <h1>Sign Up</h1>
  
  <div class="row">
    <div class="span6 offset3">
    
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <div class="alert alert-error">
            The form contains <%= pluralize(@user.errors.count, "error") %>.
          </div>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li>- <%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <%= form_for :user, method: :post do |f| %>

        <%= f.label "Email:" %><br>
        <%= f.email_field :email %>
 
        <%= f.label "Password:" %><br>
        <%= f.password_field :password %>
  
        <%= f.label "Password confirmation:" %><br>
        <%= f.password_field :password_confirmation %>
  
        <%= f.label "Date of birth (YYYY-MM-DD):" %><br>
        <%= f.date_field :dt_of_b %>
 
        <%= f.submit "Create account", class: "btn btn-large btn-primary" %>
      <% end %>
           
      <br>
      <span><h6>Already a member? <%= link_to "Sign In!", signin_path %></h6></span>
    </div>
  </div>
</div>